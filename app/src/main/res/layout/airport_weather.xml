<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.fisincorporated.soaringforecast.utils.ConversionUtils"/>

        <variable
            name="displayPrefs"
            type="com.fisincorporated.soaringforecast.airport.airportweather.WeatherMetarTafPreferences"/>

        <variable
            name="airportWeather"
            type="com.fisincorporated.soaringforecast.data.AirportWeather"/>

        <variable
            name="metar"
            type="com.fisincorporated.soaringforecast.data.metars.Metar"/>

        <variable
            name="taf"
            type="com.fisincorporated.soaringforecast.data.taf.TAF"/>

    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_standard"
        android:layout_marginEnd="@dimen/margin_double"
        android:layout_marginStart="@dimen/margin_double"
        android:layout_marginTop="@dimen/margin_standard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_standard"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/airport_station_id"
                        style="@style/forecastData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="@{airportWeather.icaoId}"
                        android:textSize="@dimen/text_size_large"
                        tools:text="KORH"/>

                    <LinearLayout
                        android:id="@+id/airport_elevation_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{airportWeather.elevationM != null ? View.VISIBLE : View.GONE}">

                        <TextView
                            style="@style/forecastLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/metar_elevation"/>

                        <TextView
                            style="@style/forecastData"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Integer.toString(ConversionUtils.convertMetersToFeet(airportWeather.elevationM))}"
                            tools:text="999"/>

                        <TextView
                            style="@style/forecastLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{displayPrefs.altitudeUnits}"
                            tools:text="Ft"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include
                android:id="@+id/airport_weather_include_metar"
                layout="@layout/airport_metar"
                bind:displayPrefs="@{displayPrefs}"
                bind:metar="@{airportWeather.metar}"/>

            <include
                android:id="@+id/airport_weather_include_taf"
                layout="@layout/airport_taf"
                bind:displayPrefs="@{displayPrefs}"
                bind:taf="@{airportWeather.taf}"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</layout>