<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<data>
    <variable
        name="airport"
        type="com.fisincorporated.aviationweather.repository.Airport"/>
</data>

<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/airport_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3B3"
        android:text="@{airport.ident}"
        android:layout_marginEnd="@dimen/margin_standard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/airport_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_standard"
        android:text="@{airport.name}"
         tools:text="Sterling Airport"
        app:layout_constraintLeft_toRightOf="@+id/airport_code"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/airport_municipality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Sterling"
        android:text="@{airport.municipality}"
        app:layout_constraintTop_toBottomOf="@+id/airport_name"
        app:layout_constraintStart_toStartOf="@+id/airport_name"/>

    <TextView
        android:id="@+id/airport_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_standard"
        android:text="@{airport.state}"
        tools:text="MA"
        app:layout_constraintLeft_toRightOf="@+id/airport_municipality"
        app:layout_constraintTop_toBottomOf="@+id/airport_name"/>
</android.support.constraint.ConstraintLayout>
</layout>