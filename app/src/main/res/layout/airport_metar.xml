<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="com.fisincorporated.aviationweather.utils.ConversionUtils"/>

        <variable
            name="metar"
            type="com.fisincorporated.aviationweather.data.metars.Metar"/>

        <variable
            name="displayPrefs"
            type="com.fisincorporated.aviationweather.airportweather.WeatherDisplayPreferences"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/forecastLabel"
            android:textSize="@dimen/text_size_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metar"/>


        <TextView
            android:id="@+id/airport_station_raw_text"
            style="@style/forecastData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:text="@{metar.rawText}"
            android:visibility="@{displayPrefs.isDisplayRawTafMetar() ? View.VISIBLE : View.GONE}"
            tools:text="KORH 272054Z 24017G28KT 10SM CLR 09/M09 A3025 RMK AO2 PK WND 25032/2043 SLP253 T00941094 55001"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="@{displayPrefs.isDecodeTafMetar() ? View.GONE : View.VISIBLE}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_half"
                android:orientation="horizontal">

                <TextView
                    style="@style/forecastLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metar_windDirection"/>

                <TextView
                    style="@style/forecastData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(metar.windDirDegrees)}"
                    tools:text="340"/>

                <TextView
                    style="@style/forecastLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metar_speed"/>

                <TextView
                    style="@style/forecastData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(metar.windSpeedKt)}"
                    tools:text="15"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{metar.windGustKt == null ? View.GONE : View.VISIBLE}">

                    <TextView
                        style="@style/forecastLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metar_windGust"/>

                    <TextView
                        style="@style/forecastData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{metar.windGustKt == null ? &quot;&quot; : Integer.toString(safeUnbox(metar.windGustKt))}"
                        tools:text="10"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/forecastLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/metar_skyConditions"/>

                <TextView
                    style="@style/forecastData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:orientation="vertical"
                    android:text="@{metar.getSkyConditionsListString}"
                    tools:text="900 BKN \n1800 FEW"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="@{metar.visibilityStatuteMi == null ? View.GONE : View.VISIBLE}">

                <TextView
                    style="@style/forecastLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/metar_visibilty"
                    />

                <TextView
                    style="@style/forecastData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{Integer.toString(ConversionUtils.convertMetersToFeet(metar.visibilityStatuteMi))}"
                    tools:text="7.5"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="@{metar.vertVisFt == null ? View.GONE : View.VISIBLE}">

                    <TextView
                        style="@style/forecastLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metar_verticalVisibility"
                        />

                    <TextView
                        style="@style/forecastData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{metar.vertVisFt == null ? &quot;&quot; : Integer.toString(safeUnbox(metar.vertVisFt))}"
                        tools:text="100"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</layout>