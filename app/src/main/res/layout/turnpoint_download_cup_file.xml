<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data class="CupFileView">

        <variable
            name="position"
            type="Integer"/>

        <variable
            name="cupFile"
            type="java.io.File"/>

        <variable
            name="fileClickListener"
            type="com.fisincorporated.soaringforecast.task.download.TurnpointsDownloadRecyclerViewAdapter"/>

    </data>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{()->fileClickListener.onFileClick(cupFile, position)}"
        android:text="@{cupFile.getName}"
        android:textAppearance="?android:attr/textAppearanceMedium"
        tools:text="sterling7.cup"/>

</layout>