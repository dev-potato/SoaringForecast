<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data class="SoaringForecastImageBinding">

        <import type="android.view.View"/>

        <import type="android.widget.Spinner"/>

        <variable
            name="viewModel"
            type="com.fisincorporated.aviationweather.soaring.forecast.SoaringForecastViewModel"/>
    </data>

    <RelativeLayout
        android:id="@+id/soaring_forecast_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/soaring_forecast_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_standard"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soaring_forecast_type_label"
                style="@style/forecastLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/soaring_forecast_type"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/soaring_forecast_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@{viewModel.soaringForecastTypes}"
                android:gravity="center_vertical"
                bind:selectedForecastType="@={viewModel.selectedSoaringForecastType}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/soaring_forecast_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soaring_forecast_type"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_half"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/soaring_forecast_date_label"
                style="@style/forecastLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/soaring_forecast_date"/>

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/soaring_forecast_date_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@{viewModel.regionForecastDates}"
                android:gravity="center_vertical"
                bind:selectedRegionForecastDate="@={viewModel.selectedRegionForecastDate}"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/soaring_forecast_image_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/soaring_forecast_date"
            android:layout_marginEnd="@dimen/margin_standard"
            android:layout_marginStart="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_half"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/soaring_forecast_time_local_label"
                style="@style/forecastLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/soaring_forecast_time_local_label"/>

            <TextView
                android:id="@+id/soaring_forecast_image_local_time"
                style="@style/forecastData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"/>

        </LinearLayout>


        <com.fisincorporated.aviationweather.common.TouchImageView
            android:id="@+id/soaring_forecast_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/soaring_forecast_image_time"
            android:layout_margin="@dimen/margin_standard"/>

    </RelativeLayout>

</layout>