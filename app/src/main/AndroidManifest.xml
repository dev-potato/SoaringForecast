<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.fisincorporated.soaringforecast">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.SoaringWeatherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/glider_app_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".drawer.WeatherDrawerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".settings.SettingsActivity"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>
        <activity
            android:name=".task.TaskActivity"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>
        <activity
            android:name=".satellite.SatelliteActivity"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>
        <activity
            android:name=".airport.AirportActivity"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>
        <activity
            android:name=".about.AboutActivity"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>

        <activity
            android:name=".windy.WindyActivity"
            android:label="@string/windy"
            android:parentActivityName=".drawer.WeatherDrawerActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.fisincorporated.soaringforecast.drawer.WeatherDrawerActivity"/>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <!-- GoogleMapsKey value in debug(or release)/res/values/api_keys and not should not be
             loaded to github -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GoogleMapsKey"/>

    </application>

</manifest>